<!-- Exercise -->
<section class="exercise">
    <button class="newWorkoutBtn" type="button">Create New Program</button>
    <button class="chooseProgBtn">Choose Program</button>
    <section class="chooseProgContainer">
        <select class="progOptionsSelect">
            {{!-- list of all programs available appears --}}
        </select>
        <button class="selectProgBtn">Select</button>
    </section>
    <br>
    <form class='sessionForm' action="javascript:saveToDB();">

        <div>
            <label for="date">Session Date:</label>
            <input type="date" class='date' name="workoutDate" min="2018-01-01" required>
        </div>
        <section class="exerciseLog">
            <!-- exercise tables inputted here -->
        </section>
        <section class="fExerciseLog">
            <div>
                <h3 class="program">Sample Session</h3>
            </div><br>
            <h4 class="exerciseName">Rickshaw Carry</h4>
            <table class="exerciseTable">
                <tr>
                    <th>Set</th>
                    <th>Reps</th>
